{
  "name": "wikistxr",
  "version": "0.0.7",
  "description": "Lightweight wikitext library for syntax highlighting and editing.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/cjs",
    "dist/esm",
    "dist/index.d.ts",
    "dist/index.min.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "dev": "vite --config vite.config.demo.ts",
    "build": "vite build --config vite.config.ts && vite build --config vite.config.iife.ts && tsc --project tsconfig.json",
    "build:demo": "vite build --config vite.config.demo.ts",
    "preview": "vite preview --config vite.config.demo.ts",
    "format": "prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t7ru/wikistxr.git"
  },
  "keywords": [
    "wikitext",
    "syntax",
    "highlight",
    "library"
  ],
  "author": "t7ru",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "homepage": "https://wikistxr.t7ru.link"
}
